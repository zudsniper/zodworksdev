generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
  binaryTargets   = ["native", "rhel-openssl-1.0.x"]
  engineType      = "library"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model BlogPost {
  id          String    @id @default(cuid())
  title       String
  slug        String    @unique
  content     String
  excerpt     String?
  template    String    @default("post")
  status      PostStatus @default(DRAFT)
  publishDate DateTime?
  updatedAt   DateTime  @updatedAt
  createdAt   DateTime  @default(now())
  authorEmail String    @default("admin@zodworks.dev")
  authorName  String?   @default("Admin")
  theme       String    @default("default")
  metadata    String?
  tags        Tag[]     @relation("BlogPostTags")

  @@map("blog_posts")
}

model Tag {
  id        String     @id @default(cuid())
  name      String     @unique
  slug      String     @unique
  color     String?
  createdAt DateTime   @default(now())
  posts     BlogPost[] @relation("BlogPostTags")

  @@map("tags")
}

model Theme {
  id          String   @id @default(cuid())
  name        String   @unique
  displayName String
  version     String
  description String?
  author      String?
  templates   String
  assets      String
  config      String?
  isActive    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("themes")
}

enum PostStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}
