<header class="site-header">
  <nav class="site-nav">
    <div class="nav-brand">
      <a href="/" class="brand-link">
        <h1>{{ site.title }}</h1>
      </a>
    </div>
    
    <div class="nav-menu">
      <a href="/" class="nav-link {% if page.url == '/' %}active{% endif %}">home</a>
      <a href="/blog" class="nav-link {% if page.url contains '/blog' %}active{% endif %}">blog</a>
      <a href="/#projects" class="nav-link">projects</a>
      <a href="/#contact" class="nav-link">contact</a>
      {% if page.type == 'admin' %}
      <a href="/admin" class="nav-link admin-link">admin</a>
      {% endif %}
    </div>
  </nav>
  
  {% if page.hero %}
  <div class="page-hero">
    <h1>{{ page.hero.title | default: page.title }}</h1>
    {% if page.hero.subtitle %}
    <p class="hero-subtitle">{{ page.hero.subtitle }}</p>
    {% endif %}
  </div>
  {% endif %}
</header>

<style>
.site-header {
  border-bottom: 1px solid hsl(var(--border));
  padding-bottom: 2rem;
  margin-bottom: 2rem;
}

.site-nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1rem;
}

.nav-brand h1 {
  font-family: 'JetBrains Mono', monospace;
  color: hsl(var(--accent-orange));
  margin: 0;
  font-size: 1.5rem;
}

.brand-link {
  color: inherit;
  text-decoration: none;
}

.brand-link:hover h1 {
  color: hsl(var(--accent-green));
}

.nav-menu {
  display: flex;
  gap: 1.5rem;
  align-items: center;
}

.nav-link {
  color: hsl(var(--muted-foreground));
  text-decoration: none;
  font-weight: 500;
  transition: color 0.2s;
}

.nav-link:hover,
.nav-link.active {
  color: hsl(var(--accent-green));
}

.admin-link {
  color: hsl(var(--accent-purple)) !important;
}

.page-hero {
  text-align: center;
  padding: 2rem 0;
}

.page-hero h1 {
  font-size: 3rem;
  margin-bottom: 1rem;
  color: hsl(var(--accent-orange));
}

.hero-subtitle {
  font-size: 1.2rem;
  color: hsl(var(--muted-foreground));
  margin: 0;
}

@media (max-width: 768px) {
  .site-nav {
    flex-direction: column;
    gap: 1rem;
  }
  
  .nav-menu {
    gap: 1rem;
  }
  
  .nav-brand h1 {
    font-size: 1.25rem;
  }
  
  .page-hero h1 {
    font-size: 2rem;
  }
}
</style> 