<div class="post-meta">
  <div class="meta-primary">
    <time datetime="{{ post.publishDate }}" class="publish-date">
      {{ post.publishDate | date_format: "long" }}
    </time>
    
    {% if post.author %}
    <span class="meta-separator">•</span>
    <span class="post-author">by {{ post.author }}</span>
    {% endif %}
    
    {% if post.reading_time %}
    <span class="meta-separator">•</span>
    <span class="reading-time">{{ post.reading_time }}</span>
    {% endif %}
  </div>
  
  {% if post.updatedDate and post.updatedDate != post.publishDate %}
  <div class="meta-secondary">
    <small class="updated-notice">
      Last updated: {{ post.updatedDate | date_format: "long" }}
    </small>
  </div>
  {% endif %}
  
  {% if post.tags and post.tags.size > 0 %}
  <div class="post-tags">
    {% for tag in post.tags %}
      <span class="tag">{{ tag }}</span>
    {% endfor %}
  </div>
  {% endif %}
</div>

<style>
.post-meta {
  margin-bottom: 2rem;
  font-size: 0.875rem;
  color: hsl(var(--muted-foreground));
}

.meta-primary {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 0.5rem;
  margin-bottom: 0.5rem;
}

.meta-separator {
  color: hsl(var(--border));
}

.publish-date,
.post-author,
.reading-time {
  color: hsl(var(--muted-foreground));
}

.post-author {
  color: hsl(var(--accent-green));
  font-weight: 500;
}

.meta-secondary {
  margin-bottom: 1rem;
}

.updated-notice {
  color: hsl(var(--accent-yellow));
  font-style: italic;
}

.post-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
  margin-top: 1rem;
}

.tag {
  background: hsl(var(--muted));
  color: hsl(var(--foreground));
  padding: 0.25rem 0.5rem;
  border-radius: 0.25rem;
  font-size: 0.75rem;
  text-decoration: none;
  transition: background-color 0.2s;
}

.tag:hover {
  background: hsl(var(--accent-orange));
  color: white;
}

@media (max-width: 768px) {
  .meta-primary {
    flex-direction: column;
    align-items: flex-start;
    gap: 0.25rem;
  }
  
  .meta-separator {
    display: none;
  }
}
</style> 