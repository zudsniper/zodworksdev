{% layout "layouts/default" %}

<article class="blog-post">
    <header class="post-header">
        <h1>{{ post.title }}</h1>
        <div class="meta">
            <time datetime="{{ post.publishDate }}">{{ post.publishDate | date_format: "long" }}</time>
            {% if post.author %} • by {{ post.author }}{% endif %}
            {% if post.reading_time %} • {{ post.reading_time }}{% endif %}
        </div>
        {% if post.tags and post.tags.size > 0 %}
        <div class="tags">
            {% for tag in post.tags %}
                <span class="tag">{{ tag }}</span>
            {% endfor %}
        </div>
        {% endif %}
    </header>
    
    <div class="post-content">
        {{ post.content }}
    </div>
    
    {% if post.updatedDate and post.updatedDate != post.publishDate %}
    <div class="updated-notice">
        <small>Last updated: {{ post.updatedDate | date_format: "long" }}</small>
    </div>
    {% endif %}
</article>

<nav class="post-navigation">
    <a href="/blog" class="back-to-blog">&larr; back to blog</a>
    <a href="/#projects" class="back-to-portfolio">back to portfolio &rarr;</a>
</nav>

<style>
.post-header {
    margin-bottom: 2rem;
}

.post-header h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    line-height: 1.2;
}

.post-content {
    font-size: 1.1rem;
    line-height: 1.8;
}

.post-content img {
    max-width: 100%;
    height: auto;
    border-radius: 0.5rem;
    margin: 2rem 0;
}

.post-content ul, .post-content ol {
    margin: 1rem 0 1rem 2rem;
}

.post-content li {
    margin-bottom: 0.5rem;
}

.updated-notice {
    margin-top: 2rem;
    padding: 1rem;
    background: hsl(var(--muted));
    border-radius: 0.5rem;
    border-left: 4px solid hsl(var(--accent-yellow));
}

.post-navigation {
    display: flex;
    justify-content: space-between;
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid hsl(var(--border));
}

.post-navigation a {
    color: hsl(var(--accent-green));
    text-decoration: none;
    font-weight: 500;
}

.post-navigation a:hover {
    color: hsl(var(--accent-orange));
}

@media (max-width: 768px) {
    .post-header h1 {
        font-size: 2rem;
    }
    
    .post-navigation {
        flex-direction: column;
        gap: 1rem;
        text-align: center;
    }
}
</style>
